<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddFragment"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ATIK BİLDİRİMİ"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        ></TextView>

    <EditText
        android:id="@+id/atik_turu"
        android:hint="atık türünü giriniz"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
></EditText>

    <EditText
        android:id="@+id/atik_miktari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="atık miktarını giriniz"
        android:numeric="decimal"></EditText>
    <Button
        android:id="@+id/talep_button"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="Atık Talebi Oluştur"
        android:layout_height="wrap_content">

    </Button>



</LinearLayout>